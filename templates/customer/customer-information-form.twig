<form name="input" action="#" method="post">
	<ul class="">
		<li class="">
			Nom : <input type="text" name="lastname" {% block valueLastname %}{% endblock %}>
		</li>
		<li class="">
			Prénom : <input type="text" name="firstname" {% block valueFirstname %}{% endblock %}>
		</li>
		<li class="">
			Adresse mail : <input type="text" name="mail-address" {% block valueMailAddress %}{% endblock %}>
		</li>
		<li class="">
			Login : <input type="text" name="login" {% block valueLogin %}  value="{{ user.login }}" {% endblock %}>
		</li>
		{% block oldPassword %} {% endblock %}
		<li class="">
			{% block passwordLabel %} {% endblock %} <input type="password" name="password">
		</li>
		<li class="">
			{% block confirmPasswordLabel %} {% endblock %} <input type="password" name="confirm-password">
		</li>
		<li class="">
			Montant à créditer : <input type="text" name="account-credit">
		</li>
		{% block currentCredit %} {% endblock %}
		{% block submit %} {% endblock %}
	</ul>
</form>