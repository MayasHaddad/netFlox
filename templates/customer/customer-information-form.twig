<form name="input" action="#" method="post">
	<input type="hidden" name="id-customer" value="{% block valueId %}{% endblock %}">
	<ul class="">
		<li class="">
			Nom : <input type="text" name="lastname" {% block valueLastname %}{% endblock %}>
		</li>
		<li class="">
			Prénom : <input type="text" name="firstname" {% block valueFirstname %}{% endblock %}>
		</li>
		<li class="">
			Adresse mail : <input type="text" name="mail-address" {% block valueMailAddress %}{% endblock %}>
		</li>
		<li class="">
			Login : <input type="text" name="login" {% block valueLogin %} {% endblock %}>
		</li>
		{% block password %}
		{% endblock %}
		<li class="">
			Montant à créditer : <input type="text" name="credit" {% block currentCredit %} {% endblock %}>
		</li>
		{% block submit %} {% endblock %}
	</ul>
</form>